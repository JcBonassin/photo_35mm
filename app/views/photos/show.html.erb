<div class= "container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @photo.body %>
</p>

<p>
  <strong>Title:</strong>
  <%= @photo.title %>
</p>

<p>
<small>By <%= User.find(@photo.user_id).slug %></small>
</p>

<p>
  <%= image_tag @photo.image_url if @photo.image %>
</p>


<%= link_to 'Back', photos_path %>

<% if current_user.id == @photo.user_id %>
<%= link_to 'Edit', edit_photo_path(@photo) %> |
<%= link_to 'Delete Photo', photos_delete_path, method: :delete %>
<% end %>
</div>
