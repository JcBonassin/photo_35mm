<%= form_for([@user, @photo], multipart: true) do |f| %>

  <div class="form-group">
  <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="form-group">
  <div class="d-flex justify-content-sm-around">
    <%= f.label :title, "Add a Title" %>
    <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <div class="d-flex justify-content-sm-around">
      <%= f.label :body,"Description"%>
      <%= f.text_area :body %>
    </div>
  </div>

  <div class="form-group">
    <div class="d-flex justify-content-sm-around">
      <%= f.label :tag_list,"Tags"%>
      <%= f.text_field :tag_list, placeholder: "Tags separated with comma" %>
    </div>
  </div>

  <div class="form-group">
    <% f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.submit "Upload Photo" %>
  </div>
<% end %>