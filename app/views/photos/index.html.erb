            <div id="preloder">
              <div class="loader"></div>
            </div>
<% if @photos.length > 0 %>
 
            <div class="gallery__page">
              <div class="gallery__warp">   
                <div class="row">
                <% @photos.each do |photo|  %> 
                  <div class="col-lg-3 col-md-4 col-sm-6">
                    <%= link_to photo do %>
                        <%= photo.title %>
                        <%= image_tag photo.image_url, class: "gallery__item fresco", data_fresco_group: "gallery" %>
                        <%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure yeah!!?' } %>
                    <% end %>
                    
                  </div>
                <% end %>
                </div>  
              </div>  
            </div>
  
 <% else %>
 <p>
